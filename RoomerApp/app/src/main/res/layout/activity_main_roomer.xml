<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomerMainActivity">


    <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <org.rajawali3d.surface.RajawaliSurfaceView
                android:id="@+id/gl_surface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtLocalized"
                android:text="not Located..."
                android:textSize="50dp"
                android:textIsSelectable="true"
                android:layout_centerInParent="true" />

            <Button
                android:id="@+id/openListFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/openListfragment"
                android:clickable="false"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="800dp"
                android:background="#29ddce"
                android:padding="20dp" />

            <com.google.atap.tango.ux.TangoUxLayout
                android:id="@+id/layout_tango"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:foregroundGravity="bottom" />
        </RelativeLayout>


    </FrameLayout>

    <fragment
        android:id="@+id/navigation_drawer"
        android:name="com.projecttango.roomerapp.NavigationDrawerFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        tools:layout="@layout/drawer_main_layout" />


</android.support.v4.widget.DrawerLayout>
