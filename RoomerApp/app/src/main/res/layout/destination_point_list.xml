<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/DestinationDialogStyle"
    android:weightSum="1"
    android:padding="@dimen/activity_vertical_margin">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="55dp"></SearchView>

    <ListView
        android:id="@+id/lv"
        android:layout_width="fill_parent"
        android:layout_height="485dp"
        android:layout_weight="0.97"
        android:choiceMode="singleChoice"
        android:listSelector="@color/light_blue_roomer"
        android:minHeight="75dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin">


        <Button
            android:id="@+id/dismiss"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/dismiss"
            android:minHeight="75dp"
            android:background="@color/main_red_roomer"
            android:layout_gravity="left|center_vertical"
            android:textSize="@dimen/standart_button_text_size" />

        <Button
            android:id="@+id/accept"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/accept"
            android:minHeight="75dp"
            android:background="@color/main_blue_roomer"
            android:layout_gravity="right|center_vertical"
            android:textSize="@dimen/standart_button_text_size" />


    </FrameLayout>





</LinearLayout>
