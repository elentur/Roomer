<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/lltSavePoint">

        <org.rajawali3d.surface.RajawaliSurfaceView
            android:id="@+id/gl_surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtLocalized"
                    android:text="not Located"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create POINT to Export"
            android:id="@+id/btnStartofADFB"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/portalCoordinates"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="@string/postal_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Portal Data"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/portalCoordinates" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeleteAllAdfFiles"
            android:id="@+id/delete_all_adf_files"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/showLoadedAdfName"
            android:layout_alignTop="@+id/btnStartofADFB"
            android:layout_toStartOf="@+id/btnStartofADFB"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="100pt"
        android:layout_height="match_parent"
        android:id="@+id/lltSavePoint">


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lstPoints"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:choiceMode="singleChoice" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btnSaveToSelectedADF"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <com.google.atap.tango.ux.TangoUxLayout
        android:id="@+id/layout_tango"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>